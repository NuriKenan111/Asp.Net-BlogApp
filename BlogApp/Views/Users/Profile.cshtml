@model User

<div class="row">
    <div class="col-md-2">
        <div class="bg-white p-4">
            <img src="/img/@Model.Image" alt="" class="img-fluid">
        </div>
    </div>  
    <div class="col-md-10">
        <div class="bg-white p-4">
            <h5>@Model.Name</h5>
            <hr>
            <div id = "posts">
                <h5 class="my-4">Published Posts</h5>
                <ul class="list-group">
                    @foreach (var post in Model.Posts){
                        <li class="list-group-item"><i class="bi bi-caret-right-fill"></i><a href="/posts/details/@post.Url">@post.Title</a></li>
                    }
                </ul>
            </div>
            <div id = "comments">
                <h5 class="my-4">Published Comments</h5>
                <ul class="list-group">
                    @foreach (var comment in @Model.Comments){
                        <li class="list-group-item"><i class="bi bi-chat-right-fill me-2"></i>@comment.Text <i><a href="/posts/details/@comment.Post.Url">@comment.Post.Title</a></i></li>
                    }
                </ul>
            </div>
        </div>
    </div>  
</div>