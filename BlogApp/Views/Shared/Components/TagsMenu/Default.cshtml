@model List<Tag>

<div class="card shadow-sm mb-3">
    <div class="card-header bg-white border-0">
        <div class="text-center">
            <h5 class="card-title mb-0">Tags</h5>
        </div>
    </div>
    <div class="card-body">
        <ul class="list-inline d-flex flex-wrap gap-2" id="tag">
            @foreach (var tag in Model){
                <li class="list-inline-item">
                    <a href="/posts/tag/@tag.Url" class="btn btn-outline-primary btn-sm rounded-pill tag">@tag.Text</a>
                </li>
            }
        </ul>
    </div>
</div>